{
	"extends": "stylelint-config-standard-scss",
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"selector-max-id": 0,
		"color-named": "always-where-possible",
		"order/order": [
			"custom-properties",
			"dollar-variables",
			"declarations",
			"rules",
			"at-rules"
		],
		"order/properties-alphabetical-order": true
	}
}
